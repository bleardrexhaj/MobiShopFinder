<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.sj.projekt.mobishopfinder.FeedBack">


    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FeedBack"
        android:textAppearance="?android:attr/textAppearanceLarge"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">
    <TextView
        android:id="@+id/emri"
        android:layout_width="wrap_content"
        android:layout_height="40sp"
        android:text="Emri:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <EditText
        android:id="@+id/emri_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="Na jepni emrin tuaj"
        android:inputType="text"
        android:layout_gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:text="Email:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <EditText
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="Na jepni email-in tuaj"
            android:inputType="text"/>
    </LinearLayout>
    <EditText
        android:id="@+id/userInputDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Na jepni kritikat tuaja"
        android:inputType="text"
        android:layout_marginTop="10sp"/>

</LinearLayout>
