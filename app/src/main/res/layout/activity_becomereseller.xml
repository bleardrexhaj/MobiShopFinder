<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sj.projekt.mobishopfinder.becomereseller">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/iph"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_register" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/logo">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/trans_white_rectangle"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/logo"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get started"
                android:textColor="@color/white_color"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You already have account? "
                android:textColor="@color/white_color"
                android:textSize="12sp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textStyle="italic"
                android:clickable="true"
                android:textColor="@color/teal"
                android:textSize="15sp"
                android:layout_marginBottom="20dp"
                android:paddingStart="50dp"
                android:paddingEnd="10dp"
                />





            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="User Name"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_account_box"

                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:id="@+id/user_name"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="User Surname"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_account_box"
                android:inputType="text"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="5dp"
                android:id="@+id/user_surname"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Shop location"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_edit_location"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="3dp"
                android:id="@+id/shop_location"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Shop name"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_edit_location"
                android:inputType="none"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="3dp"
                android:id="@+id/shop_name"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Shop City"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_edit_location"
                android:inputType="none"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="3dp"
                android:id="@+id/shop_city"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Shop email"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_email"

                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="4dp"
                android:id="@+id/shop_email"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Password"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_lock"
                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:id="@+id/password"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Confirm Password"
                android:background="@drawable/rounded_white"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:drawableLeft="@drawable/ic_"

                android:textSize="14sp"
                android:drawablePadding="5dp"
                android:paddingStart="10dp"
                android:inputType="textPassword"
                android:id="@+id/confirm_password"
                android:layout_marginBottom="10dp"

                />


            <Button
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textColor="@color/white_color"
                android:text="Register"
                android:textStyle="normal"
                android:background="@drawable/register_button"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"

                />


        </LinearLayout>




    </ScrollView>



</RelativeLayout>
