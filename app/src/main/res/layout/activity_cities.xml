<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choosecity"
    android:orientation="vertical"

    tools:context="com.sj.projekt.mobishopfinder.Cities">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/zgjidh_qytetin"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:background="@color/yello"
                android:gravity="center"
                android:layout_gravity="center"
                />


            <Spinner
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:background="#dedede"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:id="@+id/spinner1"/>


            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Kerko Mobileshop-ate neper secilin qytet te Kosoves
Duke pare gjithashtu lokacionin, telefonat, dhe te dhenat e tyre !"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingVertical="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:background="#33cc55"/>








        </LinearLayout>



    </ScrollView>









</LinearLayout>
